    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Flask",
            "type": "python",
            "request": "launch",
            "module": "flask",
            "env": {
                "FLASK_APP": "app",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "0"
            },
            "args": [
                "run",
                "--no-debugger",
                "--no-reload"
            ],
            "jinja": true
        },
        {
            "name": "Python: Init DB",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/database.py",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Import",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test/test_import.py",
            "console": "internalConsole"
        },
        {
            "name": "Python: Export",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/test/test_export.py",
            "console": "internalConsole"
        },
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "internalConsole"
        }     
    ]
}